<h1>やること新規作成</h1>
<%= link_to '一覧へ戻る', root_path, class:"btn btn-info" %>

<%= form_with model: @task do |f| %>
  <div class="form-group">
    <%= f.label :やること %><br>
    <%= f.text_field :text %>
  </div>
  <div class="form-group">
    <%= f.label :メモ %><br>
    <%= f.text_area :memo %>
  </div>
  <div class="form-group">
    <%= f.label :期限 %><br>
    <%= f.datetime_field :limit %>
  </div>
  <div class="actions">
    <br><%= f.submit '追加', class:"btn btn-success" %>
  </div>
<% end %>