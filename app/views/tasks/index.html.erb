<h1 >やること一覧</h1>
<%= link_to 'やること追加', new_task_path, class:"btn btn-info" %>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>やること</th>
        <th>メモ</th>
        <th>期限</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <% if task.list.id == 1 %>
        <tr>
          <td><%= task.text %></td>
          <td><%= task.memo %></td>
          <td><%= task.limit %></td>
          <td><%= link_to '編集', edit_task_path(task), class:"btn btn-success" %></td>
          <td><%= link_to '削除', task_path(task), method: :delete, class:"btn btn-danger" %>

        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>終わった</th>
        <th>メモ</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <% if task.list.id == 2 %>
          <tr>
            <td><%= task.text %></td>
            <td><%= task.memo %></td>
            <td><%= link_to '削除', task_path(task), method: :delete, class:"btn btn-danger" %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>