<h2>新規登録</h2>
<%= link_to "トップページ", root_path, class:"btn btn-info" %>
<%= link_to 'ログイン', new_user_session_path, class:"btn btn-info" %>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  

  <div class="form-group">
    <%= f.label :ニックネーム %><strong>(6文字以内)</strong><br />
    <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <strong>(<%= @minimum_password_length %>文字以上)</strong>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class:"btn btn-success" %>
  </div>
<% end %>
