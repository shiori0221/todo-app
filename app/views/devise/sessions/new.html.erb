<h2>ログイン</h2>
<%= link_to "トップページ", root_path, class:"btn btn-info" %>
<%= link_to "新規登録", new_user_registration_path, class:"btn btn-info" %>


<%= form_with model: @user, url: user_session_path, local: true do |f| %>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-success" %>
  </div>
<% end %>